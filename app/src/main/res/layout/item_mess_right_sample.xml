<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/view16"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/mess_right"
        app:layout_constraintBottom_toBottomOf="@+id/messright"
        app:layout_constraintEnd_toEndOf="@+id/messright"
        app:layout_constraintStart_toStartOf="@+id/messright"
        app:layout_constraintTop_toTopOf="@+id/messright" />

    <TextView
        android:id="@+id/messright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="5dp"
        android:paddingTop="6dp"
        android:paddingRight="5dp"
        android:paddingBottom="6dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timemess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textColor="@color/silver"
        app:layout_constraintEnd_toEndOf="@+id/view16"
        app:layout_constraintTop_toBottomOf="@+id/view16" />
</androidx.constraintlayout.widget.ConstraintLayout>